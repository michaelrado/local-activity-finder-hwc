APP_NAME=local-activity-finder
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

DEBUG_CAPTURE=false         # turn capture on/off (never enable in prod)
CAPTURE_SET=default         # name the bucket (e.g., nyc, sf, la)
CAPTURE_INCLUDE_REQUEST=true  # also record request params (optional)

MOCK_MODE=false # set to false for live calls
MOCK_FIXTURE=default # default fixture set name (can be overridden per-request)  

POI_PROVIDER=geoapify       # overpass | opentripmap | geoapify

OVERPASS_ENDPOINT=https://overpass-api.de/api/interpreter
# comma list of OSM tags to include (key=value OR key only)
OVERPASS_TAGS=tourism,amenity,leisure,natural

OPENTRIPMAP_KEY="${OPENTRIPMAP_KEY}"

NOMINATIM_BASE=https://nominatim.openstreetmap.org
NOMINATIM_EMAIL="${NOMINATIM_EMAIL}"
GEOCODE_CACHE_MIN=10                

GEOAPIFY_API_KEY="${GEOAPIFY_API_KEY}"
# Optional: tune what you fetch (comma-separated Geoapify categories)
# Full taxonomy: https://apidocs.geoapify.com/docs/places/#categories
# Used for BOTH querying and normalization
# Indoor-leaning
GEOAPIFY_INDOOR_CATS=sport.sports_centre,sport.fitness.fitness_centre,sport.ice_rink,sport.swimming_pool,entertainment.cinema,entertainment.culture.theatre,entertainment.culture.arts_centre,leisure.spa,catering,catering.restaurant,catering.cafe,catering.fast_food,catering.food_court,catering.bar,catering.pub,commercial,commercial.shopping_mall,commercial.department_store,commercial.supermarket,commercial.marketplace

# Outdoor-leaning
